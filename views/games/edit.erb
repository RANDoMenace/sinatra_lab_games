<h2>Edit Game</h2>

<form class="game" id="edit-game" method="POST" action="/games/<%= @game.id %>">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label for="game-title">Title:</label>
    <input type='text' name='game[title]' id="game-title" value="<%= @game.title %>">
  </div>
  <div>
    <label for="game-genre">Genre:</label>
    <input type='text' name='game[genre]' id="game-genre" value="<%= @game.genre %>">
  </div>
  <div>
    <input type="submit" value="Save Game" class='btn'>
  </div>
</form>
